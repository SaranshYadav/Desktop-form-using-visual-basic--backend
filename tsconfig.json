{
    "compilerOptions": {
      "target": "ES6",                      /* Specify ECMAScript target version: 'ES6' for modern JS features */
      "module": "CommonJS",                 /* Specify module code generation: 'CommonJS' for Node.js */
      "outDir": "./dist",                   /* Redirect output structure to the 'dist' directory */
      "strict": true,                       /* Enable all strict type-checking options */
      "esModuleInterop": true,              /* Enables interoperability between CommonJS and ES Modules */
      "skipLibCheck": true,                 /* Skip type checking of declaration files */
      "forceConsistentCasingInFileNames": true  /* Disallow inconsistently-cased references to the same file */
    },
    "include": [
      "src/*.ts"                        /* Specify the path to your TypeScript files */
    ],
    "exclude": [
      "node_modules"                       /* Exclude folder where third-party modules are installed */
    ]
  }
  